<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurantordermanagement.controllers.ClockingController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor=".0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor=".0">
         <children>
            <Label fx:id="errorLabel" alignment="TOP_LEFT" contentDisplay="TOP" layoutX="250.0" layoutY="34.0" textAlignment="CENTER" textFill="RED" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Employee Clock in/out" textAlignment="CENTER" />
            <HBox alignment="CENTER" maxHeight="50" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="Employee Code" />
                  <TextField fx:id="employeeCodeField" alignment="CENTER" maxWidth="300">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </TextField>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#clockinClicked" text="Clock In" />
            <ScrollPane fx:id="historyScroll" maxWidth="500.0" prefHeight="200.0" vbarPolicy="NEVER">
              <content>
                <AnchorPane prefHeight="200.0">
                     <children>
                        <HBox fx:id="historyBox" alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor=".0" AnchorPane.leftAnchor=".0" AnchorPane.rightAnchor=".0" AnchorPane.topAnchor=".0">
                           <padding>
                              <Insets bottom="20.0" top="20.0" />
                           </padding>
                           <children>
                             </children></HBox>
                     </children></AnchorPane>
              </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
