<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import com.example.restaurantordermanagement.utils.JobRow?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurantordermanagement.controllers.JobController">
   <children>
      <BorderPane layoutY="9.0" AnchorPane.bottomAnchor="-9.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="9.0">
         <top>
            <HBox prefHeight="41.0" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="searchField" prefHeight="25.0" prefWidth="122.0" promptText="..." />
                  <Button mnemonicParsing="false" onAction="#searchJob" text="Seach">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button onAction="#showAddForm" mnemonicParsing="false" text="Add" />
                  <Button onAction="#showEditForm" mnemonicParsing="false" text="Edit" />
                  <Button onAction="#showDeleteForm" mnemonicParsing="false" text="Delete" />
                  <Label fx:id="errorMessage" textFill="#fc0000" />
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
         <bottom>
            <BarChart prefHeight="119.0" prefWidth="600.0" BorderPane.alignment="CENTER">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis prefHeight="26.0" prefWidth="28.0" side="LEFT" />
              </yAxis>
            </BarChart>
         </bottom>
          <left>
              <TableView fx:id="jobTable" prefHeight="209.0" prefWidth="272.0" BorderPane.alignment="CENTER">
                  <columns>
                      <TableColumn prefWidth="163.0" text="Job Name">
                          <cellValueFactory>
                              <PropertyValueFactory property="name"/>
                          </cellValueFactory>
                      </TableColumn>

                      <TableColumn prefWidth="164.0" text="#Employees">
                          <cellValueFactory>
                              <PropertyValueFactory property="employeesNumber"/>
                          </cellValueFactory>
                      </TableColumn>
                  </columns>

                  <items>
                      <FXCollections fx:factory="observableArrayList">

                      </FXCollections>
                  </items>
              </TableView>
          </left>
         <center>
            <PieChart prefHeight="209.0" prefWidth="266.0" BorderPane.alignment="CENTER" />
         </center>
          <right>
              <VBox fx:id="jobForm" visible="false" spacing="10.0" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
                  <padding>
                      <Insets top="20" right="20" bottom="20" left="20"/>
                  </padding>

                  <Label fx:id="labelFormName" text="Add New Job"  />

                  <Label text="Job Name:" />
                  <TextField fx:id="jobNameField" promptText="Enter job name" prefWidth="180"/>
                  <ComboBox fx:id="jobComboBox" layoutX="20.0" layoutY="172.0" promptText="Job" />
                  <Button fx:id="formJobButton"
                          text="Add Job"
                          prefWidth="120"
                          />

                  <Label fx:id="addJobMessage" textFill="green" />
              </VBox>
          </right>

      </BorderPane>
   </children>
</AnchorPane>
